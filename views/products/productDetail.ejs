<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/productDetails.css' />
</head>

<body>
    <main>
        <%- include('../partials/header.ejs') %>

            <section class="principal">

                <!--   <div class="alternativePhotos">
                    <img src="" alt="foto 1">
                    <img src="" alt="foto 2">
                    <img src="" alt="foto 3">
                    <img src="" alt="foto 4">
                    <img src="" alt="foto 5">
                    <img src="" alt="foto 6">
                    <img src="" alt="foto 7">
                    <img src="" alt="foto 8">
                    <img src="" alt="foto 9">
                    <img src="" alt="foto 10">
                </div> -->

                <img src="<%= product.image  %>" alt="<%= product.name  %>" class="productImage">

                <div class="firstDetails">

                    <span class="productNaming">
                        <h1>
                            <%= product.name %>
                        </h1>
                        <h3>
                            <%= product.description %>
                        </h3>
                    </span>

                    <% if (product.gender) { %>
                        <!--                         <p style="font-size: 18px; font-weight: 600;">Género</p>
 -->
                        <span class="sizes">
                            <% product.gender.forEach(gender=> { %>
                                <div>
                                    <%= gender %>
                                </div>
                                <% }) %>
                        </span>
                        <% } %>


                            <h2>
                                $<%= product.price %>
                            </h2>



                            <% if (product.color) { %>
                                <span>
                                    <p style="font-size: 18px; font-weight: 600;">Color</p>
                                    <p>
                                        <%= product.color %>
                                    </p>
                                </span>
                                <% } %>



                                    <% if (product.wearSize) { %>
                                        <p style="font-size: 18px; font-weight: 600;">Talles</p>
                                        <span class="sizes">
                                            <% product.wearSize.forEach(size=> { %>
                                                <div>
                                                    <%= size %>
                                                </div>
                                                <% }) %>
                                        </span>
                                        <% } %>

                                            <% if (product.size) { %>
                                                <p style="font-size: 18px; font-weight: 600;">Tamaños</p>
                                                <span class="sizes">
                                                    <% product.size.forEach(size=> { %>
                                                        <div>
                                                            <%= size %>
                                                        </div>
                                                        <% }) %>
                                                </span>
                                                <% } %>

                                                    <% if (product.footSize) { %>
                                                        <p style="font-size: 18px; font-weight: 600;">Talles</p>
                                                        <span class="sizes">
                                                            <% product.footSize.forEach(size=> { %>
                                                                <div>
                                                                    <%= size %>
                                                                </div>
                                                                <% }) %>
                                                        </span>
                                                        <% } %>

                                                            <% if (product.weight) { %>
                                                                <p style="font-size: 18px; font-weight: 600;">Peso</p>
                                                                <span class="sizes">
                                                                    <% product.weight.forEach(weight=> { %>
                                                                        <div>
                                                                            <%= weight %>
                                                                        </div>
                                                                        <% }) %>
                                                                </span>
                                                                <% } %>



                                                                    <span class="buyOptions darkGlass">
                                                                        <button>Comprar</button>
                                                                        <button>Agregar al carrito</button>
                                                                    </span>

                </div>

            </section>

    </main>
    <%- include('../partials/footer.ejs') %>
</body>

</html>
</body>

</html>