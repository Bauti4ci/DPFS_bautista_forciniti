<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/create&editStyles.css' />
</head>

<body>

    <main>

        <%- include('../partials/header.ejs') %>

            <h1>
                <%= title %>
            </h1>

            <section>
                <form action="/product/destroy" method="post">
                    <div class="createForm">
                        <span class="createSpan">
                            <label for="id">Id del Producto</label>
                            <input type="number" name="id" id="id" required>
                        </span>
                    </div>

                    <div class="submitButtonDiv">
                        <button class="blackButton darkGlass">Borrar</button>
                    </div>
                </form>
            </section>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>

<script src="/scripts/createForm.js"></script>

</html>